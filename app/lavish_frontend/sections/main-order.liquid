.customer.order table.responsive-table,
.customer.order table.order-details,
.customer.order table.mobile-order-table {
  table-layout: fixed !important;
  border-collapse: separate !important;
  border-spacing: 0 !important;
  font-size: 1.4rem !important;
  border-style: hidden !important;
  box-shadow: none !important;
}

.customer.order table.responsive-table td,
.customer.order table.order-details td,
.customer.order table.mobile-order-table td,
.customer.order table.responsive-table th,
.customer.order table.order-details th,
.customer.order table.mobile-order-table th {
  padding: 1rem 0.5rem !important;
  border: none !important;
  word-wrap: break-word !important;
  word-break: break-word !important;
  overflow-wrap: break-word !important;
}

/* OVERRIDE WORD-WRAP NORMAL */
.customer.order *,
.customer.order table.responsive-table *,
.customer.order table.order-details *,
.customer.order table.mobile-order-table * {
  word-wrap: break-word !important;
  word-break: break-word !important;
  overflow-wrap: break-word !important;
}

/* UNIVERSAL TEXT WRAPPING FIXES - HIGHEST PRIORITY */
.customer.order *,
.customer.order table.responsive-table,
.customer.order table.responsive-table td,
.customer.order table.responsive-table th,
.customer.order table.responsive-table td *,
.customer.order table.responsive-table th * {
  word-wrap: break-word !important;
  word-break: break-word !important;
  overflow-wrap: break-word !important;
  white-space: normal !important;
  max-width: 100% !important;
  box-sizing: border-box !important;
  overflow: visible !important;
}

